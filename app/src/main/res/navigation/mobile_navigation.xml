<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.bottomnav.ui.login.LoginActivity"
        android:label="Log In"
        tools:layout="@layout/activity_login">
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnav.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/navigation_book"
        android:name="com.example.bottomnav.ui.book.BookFragment"
        android:label="Study Room Booking Form"
        tools:layout="@layout/fragment_book">
    </fragment>

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.bottomnav.ui.about.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about">
    </fragment>
</navigation>